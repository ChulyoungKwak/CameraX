<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brightText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Compensation Index" />

        <RadioGroup
            android:id="@+id/radioGroupBright"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="36dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtnBright1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="-1"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radioBtnBright2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radioBtnBright3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text" />


        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resolutionText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Resolution" />

        <RadioGroup
            android:id="@+id/radioGroupResolution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtnResolution1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="16:9"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radioBtnResolution2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="4:3"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtZoom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Zoom" />

        <RadioGroup
            android:id="@+id/radioGroupZoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtnZoom1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="1X"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radioBtnZoom2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="2X"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radioBtnZoom3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="5X"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>